{
	"info": {
		"_postman_id": "unique-id",
		"name": "Withus API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Get Token (Keycloak Direct)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = JSON.parse(responseBody);",
									"pm.environment.set(\"access_token\", jsonData.access_token);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "grant_type",
									"value": "password",
									"type": "text"
								},
								{
									"key": "client_id",
									"value": "withus-client",
									"type": "text"
								},
								{
									"key": "username",
									"value": "user1",
									"type": "text"
								},
								{
									"key": "password",
									"value": "test123",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "http://localhost:8080/realms/withus-realm/protocol/openid-connect/token",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8080",
							"path": [
								"realms",
								"withus-realm",
								"protocol",
								"openid-connect",
								"token"
							]
						}
					}
				},
				{
					"name": "Login (Spring Boot)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = JSON.parse(responseBody);",
									"pm.environment.set(\"access_token\", jsonData.access_token);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://localhost:8081/auth/login?username=user1&password=test123",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8081",
							"path": ["auth", "login"],
							"query": [
								{
									"key": "username",
									"value": "user1"
								},
								{
									"key": "password",
									"value": "test123"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "API",
			"item": [
				{
					"name": "Public Hello",
					"request": {
						"method": "GET",
						"url": {
							"raw": "http://localhost:8081/public/hello",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8081",
							"path": ["public", "hello"]
						}
					}
				},
				{
					"name": "Secure Hello",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "http://localhost:8081/secure/hello",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8081",
							"path": ["secure", "hello"]
						}
					}
				}
			]
		}
	]
}
